<br/>
<div class="card">
  <div class="card-header">
   <h2>Sign In</h2>
  </div>
  <div class="card-body">

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false} } ) do |f| %>
  <div class="col-md-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email", class:'form-control'  %>
  </div>
  <br/>

  <div class="col-md-4">
    <%= f.label :password %><br/>
    <%= f.password_field :password, placeholder: 'Password', autocomplete: "current-password", class:'form-control'  %>
    <br/>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class:"form-check-input" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign In", class:"btn btn-secondary btn col-2" %>
  </div>
  
<% end %>

  </div>
</div>
<br/>

<%= render "devise/shared/links" %>
