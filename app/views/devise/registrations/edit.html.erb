<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card border-0 shadow-lg rounded-4">
        <div class="card-header bg-white border-0 py-4">
          <h2 class="h3 mb-0 fw-bold">Edit Profile</h2>
        </div>
        
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "needs-validation" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            
            <div class="row g-4">
              <div class="col-12 text-center mb-4">
                <div class="avatar-upload">
                  <% if current_user.avatar.present? %>
                    <%= image_tag current_user.avatar.url, class: "rounded-circle img-thumbnail mb-3", style: "width: 150px; height: 150px; object-fit: cover;" %>
                  <% else %>
                    <div class="avatar-placeholder rounded-circle mb-3">
                      <span class="display-4 text-muted"><%= current_user.fullname[0].upcase %></span>
                    </div>
                  <% end %>
                  
                  <div class="mb-3">
                    <%= f.file_field :avatar, 
                        class: "form-control",
                        accept: "image/png,image/jpeg,image/jpg" %>
                    <div class="form-text">Upload a new profile picture (PNG, JPG up to 5MB)</div>
                  </div>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-floating">
                  <%= f.email_field :email, 
                      class: "form-control",
                      placeholder: "name@example.com",
                      autocomplete: "email" %>
                  <%= f.label :email %>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-floating">
                  <%= f.text_field :fullname,
                      class: "form-control",
                      placeholder: "Full Name" %>
                  <%= f.label :fullname %>
                </div>
              </div>

              <div class="col-12">
                <div class="form-floating">
                  <%= f.text_field :phone,
                      class: "form-control",
                      placeholder: "Phone Number" %>
                  <%= f.label :phone %>
                </div>
              </div>

              <div class="col-12">
                <div class="form-floating">
                  <%= f.password_field :password,
                      class: "form-control",
                      placeholder: "New Password",
                      autocomplete: "new-password" %>
                  <%= f.label :password %>
                  <div class="form-text">Leave blank if you don't want to change it</div>
                </div>
              </div>

              <div class="col-12">
                <div class="form-floating">
                  <%= f.password_field :password_confirmation,
                      class: "form-control",
                      placeholder: "Confirm New Password",
                      autocomplete: "new-password" %>
                  <%= f.label :password_confirmation %>
                </div>
              </div>

              <div class="col-12">
                <div class="form-floating">
                  <%= f.password_field :current_password,
                      class: "form-control",
                      placeholder: "Current Password",
                      autocomplete: "current-password",
                      required: true %>
                  <%= f.label :current_password %>
                  <div class="form-text text-danger">Required to confirm your changes</div>
                </div>
              </div>
            </div>

            <hr class="my-4">

            <div class="d-flex justify-content-between align-items-center">
              <%= f.submit "Update Profile", class: "btn btn-primary btn-lg px-4" %>
              <%= link_to "Back", :back, class: "btn btn-outline-secondary px-4" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <p class="text-muted mb-3">Want to delete your account?</p>
            <%= button_to "Delete Account", 
                registration_path(resource_name), 
                data: { confirm: "Are you sure? This action cannot be undone.", turbo_confirm: "Are you sure? This action cannot be undone." },
                method: :delete, 
                class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :styles do %>
  <style>
    .avatar-placeholder {
      width: 150px;
      height: 150px;
      background: #f8f9fa;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto;
    }
  </style>
<% end %>





