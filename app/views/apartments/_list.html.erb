<%# Apartment list partial %>
<% if apartments.any? %>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% apartments.each do |apartment| %>
      <div class="col">
        <%= render apartment %>
      </div>
    <% end %>
  </div>

  <%# Pagination %>
  <% if @pagy&.pages && @pagy.pages > 1 %>
    <div class="d-flex justify-content-center mt-4">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  <% end %>
<% else %>
  <div class="text-center py-5">
    <i class="bi bi-house-x display-1 text-muted mb-3"></i>
    <h3 class="text-muted">No apartments found</h3>
    <p class="text-muted mb-4">Try adjusting your search criteria</p>
    <%= link_to apartments_path, class: "btn btn-outline-primary" do %>
      <i class="bi bi-arrow-counterclockwise me-1"></i> Reset Search
    <% end %>
  </div>
<% end %> 