<div class="container py-5">
  <!-- Hero Section -->
  <div class="text-center mb-5">
    <h1 class="display-4 fw-bold mb-4">Contact Us</h1>
    <p class="lead text-muted mb-0">We're here to help you with any questions you may have</p>
  </div>

  <div class="row g-5">
    <!-- Contact Information -->
    <div class="col-lg-4">
      <div class="pe-lg-4">
        <!-- Office Information -->
        <div class="card border-0 shadow-sm rounded-4 mb-4">
          <div class="card-body p-4">
            <h3 class="h5 fw-bold mb-4">Office Information</h3>
            <ul class="list-unstyled mb-0">
              <li class="d-flex mb-3">
                <div class="feature-icon bg-primary bg-opacity-10 rounded-3 p-2 me-3">
                  <i class="bi bi-geo-alt text-primary"></i>
                </div>
                <div>
                  <h4 class="h6 fw-bold mb-1">Address</h4>
                  <p class="text-muted mb-0">123 Real Estate Ave<br>New York, NY 10001</p>
                </div>
              </li>
              <li class="d-flex mb-3">
                <div class="feature-icon bg-primary bg-opacity-10 rounded-3 p-2 me-3">
                  <i class="bi bi-telephone text-primary"></i>
                </div>
                <div>
                  <h4 class="h6 fw-bold mb-1">Phone</h4>
                  <p class="text-muted mb-0">
                    <a href="tel:+1234567890" class="text-decoration-none text-muted">+1 (234) 567-890</a>
                  </p>
                </div>
              </li>
              <li class="d-flex">
                <div class="feature-icon bg-primary bg-opacity-10 rounded-3 p-2 me-3">
                  <i class="bi bi-envelope text-primary"></i>
                </div>
                <div>
                  <h4 class="h6 fw-bold mb-1">Email</h4>
                  <p class="text-muted mb-0">
                    <a href="mailto:contact@pgestate.com" class="text-decoration-none text-muted">contact@pgestate.com</a>
                  </p>
                </div>
              </li>
            </ul>
          </div>
        </div>

        <!-- Business Hours -->
        <div class="card border-0 shadow-sm rounded-4">
          <div class="card-body p-4">
            <h3 class="h5 fw-bold mb-4">Business Hours</h3>
            <ul class="list-unstyled mb-0">
              <li class="d-flex justify-content-between mb-2">
                <span class="text-muted">Monday - Friday</span>
                <span class="fw-medium">9:00 AM - 6:00 PM</span>
              </li>
              <li class="d-flex justify-content-between mb-2">
                <span class="text-muted">Saturday</span>
                <span class="fw-medium">10:00 AM - 4:00 PM</span>
              </li>
              <li class="d-flex justify-content-between">
                <span class="text-muted">Sunday</span>
                <span class="fw-medium">Closed</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Contact Form -->
    <div class="col-lg-8">
      <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-4">
          <h3 class="h5 fw-bold mb-4">Send us a Message</h3>
          <%= form_with url: "#", local: true, class: "row g-3" do |f| %>
            <div class="col-md-6">
              <label class="form-label">First Name</label>
              <%= f.text_field :first_name, class: "form-control", required: true %>
            </div>
            <div class="col-md-6">
              <label class="form-label">Last Name</label>
              <%= f.text_field :last_name, class: "form-control", required: true %>
            </div>
            <div class="col-md-6">
              <label class="form-label">Email</label>
              <%= f.email_field :email, class: "form-control", required: true %>
            </div>
            <div class="col-md-6">
              <label class="form-label">Phone</label>
              <%= f.telephone_field :phone, class: "form-control" %>
            </div>
            <div class="col-12">
              <label class="form-label">Subject</label>
              <%= f.text_field :subject, class: "form-control", required: true %>
            </div>
            <div class="col-12">
              <label class="form-label">Message</label>
              <%= f.text_area :message, class: "form-control", rows: 5, required: true %>
            </div>
            <div class="col-12">
              <%= f.submit "Send Message", class: "btn btn-primary", data: { turbo: false } %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Map Section -->
  <div class="mt-5">
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
      <iframe 
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d193595.15830869428!2d-74.119763973046!3d40.69766374874431!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew%20York%2C%20NY%2C%20USA!5e0!3m2!1sen!2s!4v1645564756836!5m2!1sen!2s" 
        width="100%" 
        height="450" 
        style="border:0;" 
        allowfullscreen="" 
        loading="lazy">
      </iframe>
    </div>
  </div>
</div>

<% content_for :styles do %>
  <style>
    .feature-icon {
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .feature-icon i {
      font-size: 1.25rem;
    }
  </style>
<% end %>
