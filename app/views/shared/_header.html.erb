<nav class="navbar navbar-expand-lg navbar-estate sticky-top">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand d-flex align-items-center" do %>
      <span class="fs-4 fw-bold text-estate-primary">PG Estate</span>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link #{current_page?(root_path) ? 'active' : ''}" %>
        </li>
        <li class="nav-item">
          <%= link_to "About", about_path, class: "nav-link #{current_page?(about_path) ? 'active' : ''}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Contact", contacts_path, class: "nav-link #{current_page?(contacts_path) ? 'active' : ''}" %>
        </li>
      </ul>

      <div class="d-flex align-items-center">
        <% if user_signed_in? %>
          <div class="dropdown">
            <a class="btn btn-link text-decoration-none dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
              <%= image_tag current_user.avatar, class: "avatar me-2" if current_user.avatar.attached? %>
              <%= current_user.fullname %>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <li>
                <%= link_to "My Profile", user_path(current_user), class: "dropdown-item" %>
              </li>
              <li>
                <%= link_to "New Property", new_apartment_path, class: "dropdown-item" %>
              </li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "dropdown-item text-danger" %>
              </li>
            </ul>
          </div>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: "btn btn-estate btn-primary me-2" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-outline-primary btn-estate" %>
        <% end %>
      </div>
    </div>
  </div>
</nav> 